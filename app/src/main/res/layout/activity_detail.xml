<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.madisonrong.bgirls.activities.DetailActivity">


    <include
        android:id="@+id/appbar"
        layout="@layout/include_toolbar" />


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_detail_viewpager"
        android:paddingLeft="@dimen/activity_detail_show_girl_padding"
        android:paddingRight="@dimen/activity_detail_show_girl_padding"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_detail_sliding_tabs"
        android:layout_marginTop="@dimen/activity_detail_show_girl_padding"
        android:paddingLeft="@dimen/activity_detail_show_girl_padding"
        android:paddingRight="@dimen/activity_detail_show_girl_tab_margin"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"/>


</LinearLayout>
